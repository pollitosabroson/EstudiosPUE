<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre_tienda"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_tienda"
        android:layout_alignLeft="@+id/nombre_tienda"
        android:layout_alignStart="@+id/nombre_tienda"
        android:layout_marginTop="32dp"
        android:id="@+id/precio_tienda" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/precio_tienda"
        android:layout_toRightOf="@+id/nombre_tienda"
        android:layout_toEndOf="@+id/nombre_tienda"
        android:id="@+id/servicio_tienda" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valoracion_tienda"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_alignTop="@+id/nombre_tienda"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:numStars="5"/>
</RelativeLayout>